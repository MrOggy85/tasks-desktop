{
  "name": "tasks-desktop",
  "version": "0.1.0",
  "private": true,
  "main": "src/main.ts",
  "build": {
    "appId": "com.otaku.tasks-desktop",
    "files": [
      "arc/**/*",
      "node_modules/**/*",
      "package.json"
    ]
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "lint": "eslint electron/**/* && eslint src/**/*",
    "postinstall": "install-app-deps",
    "dev": "concurrently -k \"BROWSER=none yarn start\" \"yarn:electron\"",
    "electron": "tsc --project electron/tsconfig.json && electron ./build/electron/main.js",
    "electron:build": "tsc --project electron/tsconfig.json",
    "electron:watch": "tsc --watch --project electron/tsconfig.json"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.0",
    "axios": "^0.27.2",
    "bootstrap": "^5.1.3",
    "chart.js": "^3.7.1",
    "cron-schedule": "^3.0.6",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.0",
    "electron": "^17.2.0",
    "electron-is-dev": "^2.0.0",
    "pg": "^8.7.3",
    "react": "^17.0.2",
    "react-bootstrap": "^2.2.2",
    "react-chartjs-2": "^4.0.1",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-redux": "^7.2.6",
    "react-router-dom": "^6.2.2",
    "react-scripts": "5.0.0",
    "reactstrap": "^9.0.1",
    "typeorm": "^0.3.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/jest": "^28.1.0",
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@types/react-router-dom": "^5.3.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "concurrently": "^7.0.0",
    "electron-builder": "^22.14.13",
    "eslint": "^8.12.0",
    "eslint-plugin-react": "^7.29.4",
    "jest": "^28.1.0",
    "prettier": "^2.6.1",
    "typescript": "^4.6.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version"
    ]
  }
}
